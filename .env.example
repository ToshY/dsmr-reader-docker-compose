DSMRREADER_DJANGO_DATABASE_HOST="${POSTGRES_HOST}"
DSMRREADER_DJANGO_DATABASE_PORT="${POSTGRES_PORT}"
DSMRREADER_DJANGO_DATABASE_NAME="${POSTGRES_DATABASE}"
DSMRREADER_DJANGO_DATABASE_USER="${POSTGRES_USER}"
DSMRREADER_DJANGO_DATABASE_PASSWORD="${POSTGRES_PASSWORD}"
DSMRREADER_DJANGO_DATABASE_CONN_MAX_AGE="60"
