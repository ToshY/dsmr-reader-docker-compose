###> Database backup ###
DB_BACKUP_DEBUG_MODE="FALSE"
DB_BACKUP_CONTAINER_ENABLE_MONITORING="false"
DB_BACKUP_DB_TYPE="pgsql"
DB_BACKUP_DB_HOST="${POSTGRES_HOST}"
DB_BACKUP_DB_PORT="${POSTGRES_PORT}"
DB_BACKUP_DB_USER="${POSTGRES_USER}"
DB_BACKUP_DB_PASS="${POSTGRES_PASSWORD}"
DB_BACKUP_ENABLE_CHECKSUM="false"
DB_BACKUP_DB_DUMP_BEGIN="0130"
DB_BACKUP_SPLIT_DB="TRUE"
DB_BACKUP_DB_DUMP_FREQ="1440"
DB_BACKUP_DB_DUMP_TARGET='/db'
DB_BACKUP_DB_NAME="${POSTGRES_DATABASE}"
DB_BACKUP_EXTRA_OPTS="-Z6 --blobs"
DB_BACKUP_SEND_NOTIFICATION="false"
DB_BACKUP_SYNC_S3="false"
DB_BACKUP_AWS_KEY=""
DB_BACKUP_AWS_SECRET=""
DB_BACKUP_EXTRA_S3_BUCKET="s3://backup-bucket/dsmr"
DB_BACKUP_EXTRA_S3_ENDPOINT_URL="https://s3.us-west-001.backblazeb2.com"
