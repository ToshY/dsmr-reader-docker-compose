###> DSMR ###
DSMRREADER_TZ="Europe/Amsterdam"
DSMRREADER_VITUAL_HOST="localhost"
DSMRREADER_ADMIN_USER="admin"
DSMRREADER_ADMIN_PASSWORD="admin"
DSMRREADER_LOGLEVEL="WARNING"
DSMRREADER_REMOTE_DATALOGGER_MODE="standalone"
DSMRREADER_REMOTE_DATALOGGER_TIMEOUT="20"
DSMRREADER_REMOTE_DATALOGGER_SLEEP="0.5"
DSMRREADER_REMOTE_DATALOGGER_DEBUG_LOGGING="false"
DSMRREADER_DJANGO_TIME_ZONE="${DSMRREADER_TZ}"
DSMRREADER_DJANGO_SECRET_KEY="dsmrreader"
